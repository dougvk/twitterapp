<input type='hidden' id='twitter_id' value="<%=h @user.twitter_id %>" />
<input type='hidden' id='show_per_page' />
<input type='hidden' id='current_page' />

<table>
  <tr>
    <td valign=top>
      <div id="userdetails">
      <b>Twitter ID:</b>
      <%=h @user.twitter_id %>

      <p>
        <b>Screen name:</b>
        <%=h @user.screen_name %>
      </p>
      </div>
      <div id="ids">
      </div>
      <div id="friends">
      </div>
      <div id="page_navigation">
      </div>
    </td>
    <td valign=top>
      <form method="get" action="">
        <input type=text id=query name=query />
        <input type=submit name=submit class=button id="submit_btn" value=Search />
      </form>
      <div id=results></div>
    </td>
  </tr>
</table>
